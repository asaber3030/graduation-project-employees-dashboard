# Database Configuration
DATABASE_HOST=postgresql://postgres:postgres123@localhost:5432/employees_dashboard

# Authentication
ADMIN_SECRET=your-super-secret-jwt-key-here-change-this-in-production
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Supabase Configuration (for file uploads)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLIC_KEY=your-supabase-anon-key-here

# Application Configuration
NODE_ENV=development
API_URL=http://localhost:3000/api

# Optional: Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Optional: AWS S3 Configuration (if using AWS instead of Supabase)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
